{
  "extends": [
    "@tsconfig/strictest"
  ],
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "dist",
    "allowSyntheticDefaultImports": true,
    "importHelpers": true,
    "experimentalDecorators": true,
    "noEmit": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "target": "esnext",
    "lib": [
      "esnext"
    ],
    "emitDecoratorMetadata": true,
    "sourceMap": false,
    "declaration": false,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "resolveJsonModule": true,
    "jsx": "preserve",
    "exactOptionalPropertyTypes": false,
    "noUnusedLocals": false,
    "paths": {
      "graphql-yoga": [
        "packages/graphql-yoga/src/index.ts"
      ],
      "@graphql-yoga/*": [
        "packages/*/src/index.ts",
        "packages/client/*/src/index.ts"
      ],
      "@graphql-yoga/plugin-*": [
        "packages/plugins/*/src/index.ts",
        "packages/plugins/*/yoga/src/index.ts"
      ],
      "@graphql-yoga/*-event-target": [
        "packages/event-target/*-event-target/src/index.ts"
      ],
      "@envelop/testing": [
        "packages/testing/src/index.ts"
      ],
      "@envelop/*": [
        "packages/envelop/*/src/index.ts",
        "packages/plugins/*/src/index.ts",
        "packages/plugins/*/envelop/src/index.ts"
      ]
    }
  },
  "include": [
    "packages"
  ],
  "exclude": [
    "**/dist",
    "**/node_modules",
    "**/.bob",
    "**/e2e",
    "**/benchmark",
    "**/website",
    "**/examples"
  ]
}