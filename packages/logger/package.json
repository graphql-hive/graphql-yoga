{
  "name": "@graphql-yoga/logger",
  "version": "2.0.1",
  "type": "module",
  "description": "Simple logger",
  "repository": {
    "type": "git",
    "url": "https://github.com/graphql-hive/graphql-yoga.git",
    "directory": "packages/logger"
  },
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  },
  "main": "dist/index.cjs",
  "typings": "dist/index.d.mts",
  "module": "dist/index.mjs",
  "exports": {
    ".": {
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      },
      "import": {
        "types": "./dist/index.d.mts",
        "default": "./dist/index.mjs"
      },
      "default": {
        "types": "./dist/index.d.mts",
        "default": "./dist/index.mjs"
      }
    },
    "./*": {
      "require": {
        "types": "./dist/*.d.cts",
        "default": "./dist/*.cjs"
      },
      "import": {
        "types": "./dist/*.d.mts",
        "default": "./dist/*.mjs"
      },
      "default": {
        "types": "./dist/*.d.mts",
        "default": "./dist/*.mjs"
      }
    },
    "./package.json": "./package.json"
  },
  "keywords": [
    "logger"
  ],
  "scripts": {
    "build": "tsdown",
    "check": "tsc --pretty --noEmit",
    "watch": "tsdown --watch"
  },
  "dependencies": {
    "tslib": "^2.8.1"
  },
  "devDependencies": {
    "tsdown": "^0.20.0-beta.1"
  },
  "publishConfig": {
    "directory": "dist",
    "access": "public"
  },
  "sideEffects": true,
  "buildOptions": {
    "input": "./src/index.ts"
  },
  "typescript": {
    "definition": "dist/index.d.mts"
  }
}
